<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kosmo.fitnesstogether">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessTogether">

        <!--- 인트로 화면-->
        <activity android:name=".IntroActivity" android:label="FitnessTogether"
            android:exported="true"
            android:noHistory="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--로그인 화면-->
        <!--자바코드가 아닌 xml속성으로 Intent.FLAG_ACTIVITY_NO_HISTORY설정-->
        <!--스프트 키패드용:android:windowSoftInputMode="adjustPan"-->
        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".LoginActivity"
            android:label="로그인 화면"
            android:noHistory="true"
            />
        <!--로그인후 이동화면:컨텐츠 화면-->
        <activity  android:name=".MainActivity" android:label="컨텐츠 화면"/>
        <!--바코드 읽기 화면-->
    </application>

</manifest>