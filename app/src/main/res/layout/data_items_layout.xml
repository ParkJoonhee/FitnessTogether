<?xml version="1.0" encoding="utf-8"?><!--
cardElevation:그림자가 있는 카드뷰를 생성
cardCornerRadius:모서리 반지름 설정
cardBackgroundColor:카드뷰의 배경색을 설정
contentPadding:카드 뷰 내의 여백 설정
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="15dp">
    <!--
    android:layout_margin="20dp"
    app:cardUseCompatPadding="true"
    추가시 여백이 많이 생김
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--카드뷰로 라운드 이미지 만들기-->
        <!--카드뷰안에는 뷰가 무조건 하나 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#8EDAAD"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:columnCount="3"
                android:rowCount="6">

                <TextView
                    android:layout_gravity="fill"
                    android:layout_marginVertical="5dp"
                    android:text="식품이름" />

                <TextView
                    android:layout_marginVertical="5dp"
                    android:text=" : " />
                <TextView
                    android:id="@+id/itemName"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp" />

                <TextView
                    android:layout_marginVertical="5dp"
                    android:text="1회 제공량" />

                <TextView
                    android:layout_marginVertical="5dp"
                    android:text=" : " />
                <TextView
                    android:id="@+id/itemOne"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical"
                    android:textSize="15sp" />

                <TextView
                    android:layout_marginVertical="5dp"
                    android:text="열량(kcal)" />

                <TextView
                    android:layout_marginVertical="5dp"
                    android:text=" : " />
                <TextView
                    android:id="@+id/itemKcal"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginVertical="5dp"
                    android:text="탄수화물(g)" />

                <TextView
                    android:layout_marginVertical="5dp"
                    android:text=" : " />
                <TextView
                    android:id="@+id/itemTan"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginVertical="5dp"
                    android:text="단백질(g)" />
                <TextView
                    android:layout_marginVertical="5dp"
                    android:text=" : " />

                <TextView
                    android:id="@+id/itemDan"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginVertical="5dp"
                    android:text="지방(g)" />

                <TextView
                    android:layout_marginVertical="5dp"
                    android:text=" : " />

                <TextView
                    android:id="@+id/itemGi"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />

            </GridLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <!--구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D1CFCF" />
</LinearLayout>